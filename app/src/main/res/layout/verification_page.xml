<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Verifikasi"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Kode sudah dikirim\nnomor telepon Anda"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:hint="Ke nomor +62 82125141014"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <EditText
                android:id="@+id/verification_code_1"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="38sp" />

            <EditText
                android:id="@+id/verification_code_2"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="38sp"
                android:layout_toEndOf="@id/verification_code_1" />

            <EditText
                android:id="@+id/verification_code_3"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="38sp"
                android:layout_toEndOf="@id/verification_code_2" />

            <EditText
                android:id="@+id/verification_code_4"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="38sp"
                android:layout_toEndOf="@id/verification_code_3" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:hint="Kode akan kadaluarsa dalam 01:00"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <Button
            android:id="@+id/btnVerication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:text="Lanjutkan"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:hint="Tidak menerima kode?"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:text="Kirim ulang kode"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>